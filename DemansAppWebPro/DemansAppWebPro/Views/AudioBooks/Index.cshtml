<div class="card card-top">
    <div class="card-header">
        <div class="row text-center">
            <h3 class="page-title col-sm-10">Sesli Kitap</h3>
            <button type="button" class="btn btn btn-outline-dark col-sm-2 align-self-end" data-bs-toggle="modal" onclick="javascripts: showModal();">Sesli Kitap Ekle</button>
        </div>
    </div>
</div>
<div class="card">
    <div class="table-responsive">
        <table id="audio_book_table" class="table table-striped table-bordered dt-responsive nowrap" style="vertical-align:middle; width:100%;">
            <thead>
                <tr>
                    <th class="table-style">Id</th>
                    <th class="table-style">Ad</th>
                    <th class="table-style">Konusu</th>
                    <th class="table-style">Text</th>
                    <th class="table-style">Url</th>
                    <th class="table-style">Düzenle/Sil</th>
                    <th class="table-style">Kullanıcılar</th>
                    <th class="table-style">Kullanıcı Ekle/Çıkar</th>
                    <th class="table-style">Durumu</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
<div class="card-body">
</div><!--end AudioBooks Table-->

<div class="modal fade" id="audioBooksModal" data-bs-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="audioBooksModalLabel" aria-hidden="true">
    <div class="modal-dialog modal_style" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h6 class="modal-title m-0" id="audioBooksModalLabel">Sesli Kitap Ekle / Güncelle</h6>
                <button type="button" class="btn-close" data-bs-dismiss="modal" onclick="reload();" aria-label="Close"></button>
            </div><!--end modal-header-->
            <div class="modal-body">
                <form id="audioBooksAddOrUpdate-form">
                    <input type="hidden" value="0" id="AddOrUpdateId" name="AddOrUpdateId" />

                    <div class="mb-3 row">
                        <label for="kitapAdi" class="modal-label-style col-sm-3 form-label align-self-center mb-lg-0">Kitap Adı</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control modal-input-style" id="kitapAdi" placeholder="Kitap Adı">
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="konusu" class="modal-label-style col-sm-3 form-label align-self-center mb-lg-0">Konusu</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control modal-input-style" id="konusu" placeholder="Konusu">
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="bilgi" class="modal-label-style col-sm-3 form-label align-self-center mb-lg-0">Bilgi</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control modal-input-style" id="bilgi" placeholder="Bilgi">
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="sesDosyasi" class="modal-label-style col-sm-3 form-label align-self-center mb-lg-0">Url</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control modal-input-style" id="sesDosyasi" placeholder="//">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success btn-sm" onclick="javascript:getUpdateOrAdd();">TAMAM</button>
                <button type="button" class="btn btn-primary btn-sm" onclick="reload();" data-bs-dismiss="modal">VAZGEÇ</button>
            </div>
        </div>
    </div>
</div><!--end AudioBook's Modal-->

<div class="modal fade" id="usersModal" data-bs-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="usersModalLabel" aria-hidden="true">
    <div class="modal-dialog modal_style" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h6 class="modal-title m-0" id="usersModalLabel">Erişim Sağlayan Kullanıcılar</h6>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div><!--end modal-header-->
            <div class="modal-body">
                <form id="users-form">
                    <div class="card">
                    <div class="table-responsive">
                        <table id="users_table" class="table table-striped table-bordered dt-responsive nowrap" style="vertical-align:middle; width:100%;">
                            <thead>
                                <tr>
                                    <th class="table-style">Ad Soyad</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary btn-sm" data-bs-dismiss="modal">TAMAM</button>
            </div>
        </div>
    </div>
</div><!--end users Modal-->

<div class="modal fade" id="userUpdateModal" data-bs-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="userUpdateModalLabel" aria-hidden="true">
    <div class="modal-dialog modal_style" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h6 class="modal-title m-0" id="userUpdateModalLabel">Kullanıcı Ekle / Çıkar</h6>
                <button type="button" class="btn-close" data-bs-dismiss="modal" onclick="reload();" aria-label="Close"></button>
            </div><!--end modal-header-->
            <div class="modal-body">
                <form id="userupdate-form">
                    <input type="hidden" value="0" id="userupdateId" name="userupdateId" />

                    <div class="mb-3 row">
                        <label class="col-sm-3 form-label text-start" for="usersmultiple"><b>Lokasyon </b><span class="text-danger">*</span></label>
                        <select class="col-md-8 multiple-select debts" multiple="multiple" id="usersmultiple" name="usersmultiple"></select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success btn-sm" onclick="javascript:userUpdate();">TAMAM</button>
                <button type="button" class="btn btn-primary btn-sm" onclick="reload();" data-bs-dismiss="modal">VAZGEÇ</button>
            </div>
        </div>
    </div>
</div><!--end usersUpdate Modal-->
